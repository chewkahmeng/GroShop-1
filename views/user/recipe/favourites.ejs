<%- include('../../partials/header.ejs') %>

<body>
<%- include('../../partials/navbar-user.ejs') %>
<div id="user-home-page">
    <div class="container justify-content-center">
        <%- include('../../partials/alerts.ejs') %>
        <center><h1>Favourite Recipes</h1></center>
        <br>
        <% if (recipes) { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            
                <% for (let recipe of recipes) { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="<%= recipe.image.srcPath%>" class="card-img-top" style="width: 100%; height: 20vw; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title"><%=recipe.name%></h5>
                            <p class="card-text"><%=recipe.cuisine%>, <%=recipe.prepTime%> <%=recipe.prepTimeUom%></p>
                            <a href="/home/recipes/<%=recipe.id%>" class="btn btn-primary">View Recipe</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
        <br><br>
        <!-- PAGINATION -->
        <ul class="pagination justify-content-center">
            <% if (pageObj.prevPage) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= pageObj.prevPage %>">Previous</a></li>
            <% } else { %>
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
            <% } %>
            <% for (let i=1; i < pageObj.totalPages + 1; i++) { %>
                <% if (pageObj.currPage === i) { %>
                <li class="page-item active"><span class="page-link"><%= i %></span></li>
                <% } else { %>
                <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
                <% } %>
                <% } %>
            <% if (pageObj.nextPage) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= pageObj.nextPage %>">Next</a></li>
            <% } else { %>
            <li class="page-item disabled"><span class="page-link">Next</span></li>
            <% } %>
        </ul>
        <% } else { %>

        <center>
            <h6 class="fw-normal">No recipes added to favourites yet..</h6>
            <br>
            <a href="/home/recipes" class="btn btn-primary" value="Back to Recipes Home">Back to Recipes Home</a>
        </center>

        <% } %>
        
        
    </div>
</div>
</body>

<%- include('../../partials/footer.ejs') %>

<%- include('partials/header.ejs') %>
<body>
<%- include('partials/navbar.ejs') %>
<script type="text/javascript">
    function onDelete(id) {
        if (confirm("Are you sure you want to delete this address?")) {
            deleteAddress(id);
        }
    }
    function deleteAddress(id) {
        var deleteUrl = `/home/address/${id}/delete`
        document.getElementById("deleteAddressForm").submit();

    }
</script>
<div id = "user-profile-view">
   <div class="container justify-content-center">
        <% if (messages.error) { %>
            <% for (let i in messages.error) { %>
            <div class="alert alert-danger"><i class="fa-solid fa-circle-exclamation"></i> &nbsp<%= messages.error[i] %></div>
            <% } %>
        <% } %>
        <% if (messages.success) { %>
            <% for (let i in messages.success) { %>
            <div class="alert alert-success"><i class="fa-solid fa-circle-exclamation"></i> &nbsp<%= messages.success[i] %></div>
            <% } %>
        <% } %>
        <h2>Profile Details</h2>
        <div class="card" id="user-profile-card">
            <div class="dropdown text-end">
                <a class="icon-dropdown" href="#" id="dropdownMenuLink-me" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fa-solid fa-gear icon-dropdown" data-mdb-toggle="tooltip" title="Manage User"></i>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink-me">
                      <li><a class="dropdown-item" href="/home/profile/<%=user.id%>/update" >Update Profile</a></li>
                      <li><a class="dropdown-item" href="/home/profile/<%=user.id%>/changePassword" >Change Password</a></li>
                </ul>
            </div>
            <table style="width: 100%">
                <colgroup>
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 10%;">
                    <col span="1" style="width: 70%;">
                 </colgroup>
                <tbody>
                    <tr>
                        <td>Username</td>
                        <td>:</td>
                        <td><%= user.username%></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>:</td>
                        <td><%= user.email%></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br>
        <h2>Shipping Address</h2>
        <div class="card" id="user-profile-address-card">
            <% if (address) { %>
            <span class="text-end">
                <a href="/home/address/<%=address.id%>/update"><i class="fa-solid fa-pen" data-toggle="tooltip" data-placement="top" title="Update Address"></i></a>
                &nbsp;
                <a href="#" onclick="onDelete(<%=address.id%>)"><i class="fa-solid fa-trash-can" data-toggle="tooltip" data-placement="top" title="Delete Address"></i></a>
            </span>
            <table style="width: 100%">
                <colgroup>
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 10%;">
                    <col span="1" style="width: 70%;">
                 </colgroup>
                <tbody> 
                    <tr>
                        <td>Street / Building Name</td>
                        <td>:</td>
                        <td><%= address.name%></td>
                    </tr>
                    <% if (address.floorNo) { %>
                    <tr>
                        <td>Floor No</td>
                        <td>:</td>
                        <td><%= address.floorNo%></td>
                    </tr>
                    <% } %>
                    <% if (address.unitNo) { %>
                    <tr>
                        <td>Unit No</td>
                        <td>:</td>
                        <td><%= address.unitNo%></td>
                    </tr>
                    <% } %>
                    <tr>
                        <td>Postal Code</td>
                        <td>:</td>
                        <td><%= address.postalCode%></td>
                    </tr>
                </tbody>
            </table>
            <br>
            <form hidden id="deleteAddressForm" action="/home/address/<%=address.id%>/delete" method="POST"></form>
            <% } else {%>
            <a href='/home/address/create' class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i>&nbsp;Add Address</a>
            <% } %>
        </div>
    </div> 
</div>


</body>
<%- include('partials/footer.ejs') %>